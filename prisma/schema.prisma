datasource db {
    provider = "sqlite"
    url      = "file:./prisma/dev.db"
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

model Analytics {
    id        Int        @id @default(autoincrement())
    timestamp DateTime   @default(now())
    views     Int
    visitors  Int
    PageView  PageView[]
    Referrer  Referrer[]
    Browser   Browser[]
    OS        OS[]
    Country   Country[]
    Device    Device[]
}

model PageView {
    id          Int       @id @default(autoincrement())
    url         String
    count       Int
    analyticsId Int
    analytics   Analytics @relation(fields: [analyticsId], references: [id])
}

model Referrer {
    id          Int       @id @default(autoincrement())
    domain      String
    count       Int
    analyticsId Int
    analytics   Analytics @relation(fields: [analyticsId], references: [id])
}

model Browser {
    id          Int       @id @default(autoincrement())
    name        String
    count       Int
    analyticsId Int
    analytics   Analytics @relation(fields: [analyticsId], references: [id])
}

model OS {
    id          Int       @id @default(autoincrement())
    name        String
    count       Int
    analyticsId Int
    analytics   Analytics @relation(fields: [analyticsId], references: [id])
}

model Country {
    id          Int       @id @default(autoincrement())
    name        String
    count       Int
    analyticsId Int
    analytics   Analytics @relation(fields: [analyticsId], references: [id])
}

model Device {
    id          Int       @id @default(autoincrement())
    type        String
    count       Int
    analyticsId Int
    analytics   Analytics @relation(fields: [analyticsId], references: [id])
}
